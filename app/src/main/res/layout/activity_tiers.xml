<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".TiersActivity">

    <Button
        android:id="@+id/tier1"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="@string/tier_1"
        android:onClick="onClick"/>

    />

    <Button
        android:id="@+id/tier2"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tier1"
        android:layout_centerHorizontal="true"
        android:text="@string/tier_2"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/tier3"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tier2"
        android:layout_centerHorizontal="true"
        android:text="@string/tier_3"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/tier4"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tier3"
        android:layout_centerHorizontal="true"
        android:text="@string/tier_4"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/tier5"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tier4"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="@string/tier_5" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:background="@color/colorAccent"
        android:onClick="onLogout"
        android:text="@string/btn_sign_out"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="283dp" />

    <ProgressBar
        android:id="@+id/progressBarTiers"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="177dp" />

    <TextView
        android:id="@+id/userTextView"
        android:layout_width="261dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="216dp"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:textStyle="bold" />


</RelativeLayout>
