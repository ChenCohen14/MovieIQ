<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tierTextView"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:text="Tier" />

    <TextView
        android:id="@+id/pointTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tierTextView"
        android:layout_marginEnd="53dp"
        android:text="@string/points" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="302dp"
        android:layout_height="81dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp"
        android:text="description" />

    <Button
        android:id="@+id/hintButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/answerEditText"
        android:layout_toEndOf="@+id/tierTextView"
        android:text="Hint" />

    <Button
        android:id="@+id/raiseIQButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_toEndOf="@+id/tierTextView"
        android:clickable="false"
        android:text="Raise My Movie-IQ!" />

    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="146dp"
        android:hint="Your Answer" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/raiseIQButton"
        android:layout_toStartOf="@+id/tierTextView"
        android:text="@string/submit"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/hintTextView1"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="213dp"
        android:text="Hints" />

    <TextView
        android:id="@+id/hintTextView3"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hintTextView1"
        android:layout_toEndOf="@+id/tierTextView"
        android:text="Hints" />

    <TextView
        android:id="@+id/factTextView3"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/factTextView1"
        android:layout_toEndOf="@+id/tierTextView"
        android:text="Facts" />

    <TextView
        android:id="@+id/factTextView2"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/factTextView1"
        android:layout_toStartOf="@+id/answerEditText"
        android:text="Facts" />

    <TextView
        android:id="@+id/factTextView1"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp"
        android:text="Facts" />

    <TextView
        android:id="@+id/hintTextView2"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hintTextView1"
        android:layout_toStartOf="@+id/answerEditText"
        android:text="Hints" />


</RelativeLayout>